<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    >

    <Button
        android:id="@+id/btnScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/fonts"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Tap to start the game!"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold"
        app:backgroundTint="@color/transparent"
        app:elevation="0dp"
        app:iconTint="@color/transparent" />

    <Button
        android:id="@+id/btnDeckSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:padding="5sp"
        android:text="change deck"
        android:textColor="#FBD34C"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlayerSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/btnDeckSelection"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:padding="5sp"
        android:text="players"
        android:textColor="#FBD34C"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="265dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:visibility="invisible" />



</RelativeLayout>