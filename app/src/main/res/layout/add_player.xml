<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBD34C"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-72dp"
        tools:layout_editor_absoluteY="-64dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Fighter!"
        android:fontFamily="@font/fonts"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#723CD3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/fonts"
        android:text="How many people are playing?"
        android:textColor="#8B38DB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fonts"
        android:text="START!"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#E2F6DF13"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/layout"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/t2" />

    <EditText
        android:id="@+id/editPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:hint="Player 1"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:text="Player 2"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlayer1" />

    <EditText
        android:id="@+id/editPlayer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:text="Player 3"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlayer2" />

    <EditText
        android:id="@+id/editPlayer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:text="Player 4"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlayer3" />

    <EditText
        android:id="@+id/editPlayer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:text="Player 5"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlayer4" />

    <EditText
        android:id="@+id/editPlayer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:text="Player 6"
        android:layout_marginTop="18dp"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPlayer5" />

</androidx.constraintlayout.widget.ConstraintLayout>