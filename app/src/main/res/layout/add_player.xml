<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setNumPlayers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBD34C">

    <TextView
        android:id="@+id/tvChoosePlayersHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#723CD3"
        android:fontFamily="@font/fonts"
        android:padding="15dp"
        android:text="ADD PLAYERS!"
        android:textAlignment="center"
        android:textColor="#FBD34C"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <Button-->
    <!--        android:id="@+id/button3"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginLeft="25dp"-->
    <!--        android:layout_marginBottom="25dp"-->
    <!--        android:fontFamily="@font/fonts"-->
    <!--        android:text="BACK"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textColor="#E2F6DF13"-->
    <!--        android:textSize="15sp"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        />-->

    <Button
        android:id="@+id/btnStartFromChoosePlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginStart="21dp"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:text="START!"
        android:textAlignment="center"
        android:textColor="#E2F6DF13"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAddPlayer" />

    <Button
        android:id="@+id/btnStartFromChoosePlayers3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:text="Luka"
        android:textAlignment="center"
        android:textColor="#E2F6DF13"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChoosePlayersHeader" />

    <Button
        android:id="@+id/btnStartFromChoosePlayers4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:text="Enrico"
        android:textAlignment="center"
        android:textColor="#E2F6DF13"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/btnStartFromChoosePlayers3"
        app:layout_constraintTop_toBottomOf="@+id/tvChoosePlayersHeader" />

    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginStart="7dp"
        android:background="@drawable/deckitembackground"
        android:fontFamily="@font/fonts"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="#E2F6DF13"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInputEditText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="700dp">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditText"
        android:layout_width="168dp"
        android:layout_height="41dp"
        android:layout_margin="5sp"
        android:hint="Player Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>